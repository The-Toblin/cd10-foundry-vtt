<section>
    <div class="character-description-box">
        <div>
            <h1>Description</h1>
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
        </div>
        <h1 class="sheet-header">
            Info
        </h1>
        {{#if (eq actor.type "hero")}}
        <label>
            <h3 class="stattitle">
                {{localize "cd10.stats.exp"}}
            </h3>
        </label>
        <input name="data.exp" type"text" value="{{data.exp}}" data-dtype="Number" class="statvalue" />
        {{/if}}
        <label>
            <h3 class="stattitle">
                {{localize "cd10.stats.species"}}
            </h3>
        </label>
        <input name="data.species" type"text" value="{{data.species}}" data-dtype="Number" class="statvalue" />
        <label>
            <h3 class="stattitle">
                {{localize "cd10.stats.sex"}}
            </h3>
        </label>
        <input name="data.sex" type"text" value="{{data.sex}}" data-dtype="Number" class="statvalue" />
        <label>
            <h3 class="stattitle">
                {{localize "cd10.stats.gender"}}
            </h3>
        </label>
        <input name="data.gender" type"text" value="{{data.gender}}" data-dtype="Number" class="statvalue" />
    </div>
</section>