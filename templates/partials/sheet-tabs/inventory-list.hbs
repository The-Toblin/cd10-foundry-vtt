<section class="inventory-list cd10-card flex-col flex-start">
    <div class="armor-list flex-col">
        <h3>{{localize "cd10.sheet.currency"}}</h3>
    </div>
    <hr>
    <table>
        <tr>
            <th>
                {{localize "cd10.stats.currency"}}
            </th>
            <td>
                <input name="system.money" type="text" value="{{system.money}}" data-dtype="number" placeholder=0/>
            </td>
        </tr>
    </table>
    {{#if allArmors}}
    <div class="armor-list flex-col">
        <h3>{{localize "cd10.sheet.armors"}}</h3>
        <hr>
        <div class="item-table-data" data-item-id="{{item._id}}">
            <table>
                <colgroup>
                    <col class="five">
                    <col class="fourty">
                    <col class="ten">
                    <col class="ten">
                    <col class="ten">
                    <col class="ten">
                </colgroup>
                <tr>
                    <th></th>
                    <th>
                        {{localize "cd10.sheet.name"}}
                    </th>
                    <th>
                        {{localize "cd10.item.weight"}}
                    </th>
                    {{#if barterSetting}}
                    <th>
                        {{localize "cd10.item.tradeGroup"}}
                    </th>
                    {{else}}
                    <th>
                        {{localize "cd10.item.price"}}
                    </th>
                    {{/if}}
                    <th>
                        {{localize "cd10.sheet.equipShort"}}
                    </th>
                    <th>
                        {{localize "cd10.sheet.removeShort"}}
                    </th>
                </tr>
                {{#each allArmors as |item id|}}
                <tr class="equippable-inventory-item item" data-item-id="{{_id}}">
                    <td>
                        <img class="item-img" src="{{item.img}}" title="{{item.name}}" height="15" width="15" />
                    </td>
                    <td style="text-align: left;">
                        {{name}}
                    </td>
                    <td>
                        {{item.system.weight}} {{localize "cd10.item.weightMarker"}}
                    </td>
                    {{#if ../barterSetting}}
                    <td>
                        G{{item.system.tradeGroup}}
                    </td>
                    {{else}}
                    <td>
                        {{item.system.price}} {{localize "cd10.stats.currencyShort"}}
                    </td>
                    {{/if}}
                    <td>
                        <a class="item-equip" data-type="text" title={{localize "cd10.sheet.equip" }}>
                            <i class="far fa-{{#if item.system.isEquipped}}minus{{else}}plus{{/if}}-square"></i>
                        </a>
                    </td>
                    <td>
                        <a class="item-delete" data-type="text" title={{localize "cd10.sheet.remove" }}>
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
    {{/if}}
    {{#if allWeapons}}
    <div class="weapon-list flex-col">
        <h3>{{localize "cd10.sheet.weapons"}}</h3>
