                </tr>
                {{#each normalItems as |item id|}}
                <tr class="inventory-item item" data-item-id="{{_id}}">
                    <td>
                        <img class="item-img" src="{{item.img}}" title="{{item.name}}" height="15" width="15" />
                    </td>
                    <td style="text-align: left;">
