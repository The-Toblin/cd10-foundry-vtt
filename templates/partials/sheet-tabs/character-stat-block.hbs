<section class="health-info">
    <div class="stat-element">
        <label>
            <h3 class="stattitle">
                {{localize "cd10.sheet.modifier"}}
            </h3>
        </label>
        <div class="stat-value {{#if (gte data.wounds.value 15)}}red{{/if}}">
            {{#if (gte data.wounds.value 15)}}
            {{data.debilitationType.value}}
            {{else if (eq data.modifier.value 0)}}
            {{localize "cd10.sheet.none"}}
            {{else}}
            -{{data.modifier.value}} {{data.debilitationType.value}}
            {{/if}}
            {{#if this.actor.data.data.stressing.value}}
             ({{localize "cd10.sheet.stressing"}})
            {{/if}}
        </div>
    </div>
    <div class="stat-element"> <label>
            <h3 class="stattitle">
                {{#if (eq data.wounds.value 0)}}
                    {{localize "cd10.sheet.no"}}
                {{/if}}
                {{localize "cd10.injuries.wounds"}}
                {{#unless (eq data.wounds.value 0)}}
                    {{data.wounds.value}}
                {{/unless}}
            </h3>
        </label>
        <div class="wounds-icons">
            {{#times 15}}
            <div class="dot-container {{#if (gte ../data.wounds.value 15)}}red{{else if (gte ../data.wounds.value @index)}}crossed{{/if}}">
                <i class="fas fa-circle fa-xs"></i>
            </div>
            {{/times}}
        </div>
    </div>
</section>