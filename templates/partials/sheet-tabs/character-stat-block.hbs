<section class="health-info">
    {{#if (eq actor.type "minor")}}
        <div class="flex-row flex-between">
        {{else}}
        <div class="flex-col flex-start">
            {{/if}}
            <div class="stat-element {{#if (eq actor.type "mook")}}mook-health{{/if}}">
                <label>
                    <h3 class="stattitle">
                        {{localize "cd10.sheet.modifier"}} 
                    </h3>
                </label>
                <div class="stat-value{{#if (gte system.wounds.value 15)}} red{{/if}}">
                    {{#if (gte system.wounds.value 15)}}
                    {{system.debilitationType}}
                    {{else if (eq system.modifier 0)}}
                    0
                    {{else}}
                    -{{system.modifier}} {{system.debilitationType}}
                    {{/if}}
                    {{#if stress}}
                    ({{localize "cd10.sheet.stressing"}})
                    {{/if}}
                </div>
            </div>
            <div class="stat-element {{#if (eq actor.type "mook")}}mook-health{{/if}}">
                <label>
                    <h3 class="stattitle"><i class="far fa-minus-square remove-wound"></i> {{localize "cd10.injuries.wounds"}} {{system.wounds.value}} <i
                            class="far fa-plus-square add-wound"></i>
                    </h3>
                </label>
                <div class="wounds-icons">
                    {{#times 15}}
                    <div
                        class="dot-container{{#if (gte ../system.wounds.value 15)}} red{{else if (gte ../system.wounds.value @index)}} crossed{{/if}}">
                        <i class="fas fa-circle fa-xs"></i>
                    </div>
                    {{/times}}
                </div>
            </div>
        </div>
</section>