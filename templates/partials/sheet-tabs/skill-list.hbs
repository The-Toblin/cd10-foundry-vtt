<section class="flex-row flex-between">
    {{#if skills}}
    <div class="skill-list cd10-card flex-col flex-start">
        {{#each skills as |skill|}}
        <div class="attribute-pair flex-row flex-evenly item reveal-rollable" data-item-id="{{skill._id}}">
            <div class="attribute-name skill-item" data-item-id="{{skill._id}}">
                {{skill.name}}
            </div>
            {{#if skill.flags.c2d10.levelUp}}<i class="fas fa-angle-double-up"></i>{{/if}} {{! //FIXME: Add flag for levelup}}
            <input class="attribute-value inline-edit" data-field="system.skillLevel.value"
                data-dtype="number" value="{{skill.system.skillLevel.value}}"
                placeholder="{{localize "cd10.skill.skillLevel"}}" />
            <a class="item-roll hidden rollable skill-check" data-type="text" data-action-value="{{skill.system.skillLevel.value}}" title={{localize "cd10.sheet.roll"}}>
                <img class="d10-roll-icon" src="/systems/cd10/assets/icons/roll_cd10.webp"/>
            </a>
        </div>
        {{/each}}
    </div>
    {{/if}}
    {{#if traits}}
    <div class="traits-list cd10-card flex-col flex-start">
        {{#each traits as |trait id|}}
        <div class="attribute-pair flex-row flex-evenly item reveal-rollable" data-item-id="{{trait._id}}">
            <div class="select-trait">
                {{! //FIXME: Add flags for this.}}
                <a class="select-trait" data-type="number" data-trait-value="{{this.flags.c2d10.selected}}" title={{localize "cd10.sheet.select"}}>
                    <i class="far fa-{{#if (eq this.flags.c2d10.selected 1)}}plus-{{else if (eq this.flags.c2d10.selected 2)}}minus-{{/if}}square"></i>
                </a>
            </div>
            <div class="attribute-name inventory-item item" data-item-id="{{trait._id}}">
                {{trait.name}}
            </div>
            <input class="attribute-value inline-edit" data-field="system.skillLevel.value"
                data-dtype="number" value="{{trait.system.skillLevel.value}}"
                placeholder="{{localize "cd10.skill.skillLevel"}}" />
            <a class="item-roll hidden rollable skill-check" data-type="text" data-trait-value="{{trait.system.skillLevel.value}}" title={{localize "cd10.sheet.roll"}}>
                <img class="d10-roll-icon" src="/systems/cd10/assets/icons/roll_cd10.webp"/>
            </a>
        </div>
        {{/each}}
    </div>
    {{/if}}
</section>