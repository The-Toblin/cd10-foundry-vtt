<section>
  <div class="character-description-box">
      <h3>
          {{localize "cd10.terms.bio"}}
      </h3>
    <div class="tablebox">
      <table>
        <tr>
          <th>
            {{localize "cd10.stats.playername"}}
          </th>
          <td>
            <input
              name="data.playername"
              type="text"
              value="{{data.playername}}"
              placeholder="{{localize "cd10.stats.playername"}}"
            />
          </td>
          <th>
            {{localize "cd10.stats.title"}}
          </th>
          <td>
            <input
              name="data.title"
              type="text"
              value="{{data.title}}"
              placeholder="{{localize "cd10.stats.title"}}"
            />
          </td>
        </tr>
        <tr>
          <th>
            {{localize "cd10.stats.species"}}
          </th>
          <td>
            <input
              name="data.stats.species"
              type="text"
              value="{{data.stats.species}}"
              data-dtype="String"
              placeholder="{{localize "cd10.stats.species"}}"
            />
          </td>
          <th>
            {{localize "cd10.stats.exp"}}
          </th>
          <td>
            <input
              name="data.stats.exp"
              type="text"
              value="{{data.stats.exp}}"
              data-dtype="Number"
              placeholder="{{localize "cd10.stats.exp"}}"
            />
          </td>
        </tr>
        <tr>
          <th>
            {{localize "cd10.stats.gender"}}
          </th>
          <td>
            <input
              name="data.stats.gender"
              type="text"
              value="{{data.stats.gender}}"
              data-dtype="String"
              placeholder="{{localize "cd10.stats.gender"}}"
            />
          </td>
          <th>
            {{localize "cd10.stats.sex"}}
          </th>
          <td>
            <input
              name="data.stats.sex"
              type="text"
              value="{{data.stats.sex}}"
              data-dtype="String"
              placeholder="{{localize "cd10.stats.sex"}}"
            />
          </td>
        </tr>
        <tr>
          <th>
            {{localize "cd10.stats.mainHand"}}
          </th>
          <td>
            <input
              name="data.stats.mainHand"
              type="text"
              value="{{data.stats.mainHand}}"
              data-dtype="String"
              placeholder="{{localize "cd10.stats.mainHand"}}"
            />
          </td>
          <th>
            {{localize "cd10.stats.age"}}
          </th>
          <td>
            <input
              name="data.stats.age"
              type="text"
              value="{{data.stats.age}}"
              data-dtype="Number"
              placeholder="{{localize "cd10.stats.age"}}"
            />
          </td>
        </tr>
      </table>
    </div>
    <div>
        <h3>
            {{localize "cd10.stats.appearance"}}
        </h3>
        <div class="sheet-text" data-edit="data.stats.appearance" contenteditable>
            {{data.stats.appearance}}
        </div>
    <div>
        <h3>
        {{localize "cd10.stats.personality"}}
        </h3>
        <div class="sheet-text" data-edit="data.stats.personality" contenteditable>
            {{data.stats.personality}}
        </div>
    </div>
  </div>
</section>