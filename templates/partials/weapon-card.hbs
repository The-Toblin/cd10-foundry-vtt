<div class="weapon-card sheet-card flex-column item" data-item-id="{{_id}}">
    <div class="weapon-info weapon-name dark-background pad-8">
        <p>{{name}}</p>
    </div>
    <div class="flex-row flex-start image-stats-box">
        <div class="item-img">
            <img class="item-img" src="{{img}}" title="{{name}}" />
        </div>
        <div class="weapon-box dark-background pad-8">
            {{#unless data.isRanged.value}}
            {{#if data.damage.slash.value}}
            <div class="weapon-stats attack-check" data-damage-type="slash">
                <div class="stat-name">
                    {{localize "cd10.weapon.slashDamage"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.damage.slash.value}}
                </div>
            </div>
            {{/if}}
            {{#if data.damage.pierce.value}}
            <div class="weapon-stats attack-check" data-damage-type="pierce">
                <div class="stat-name">
                    {{localize "cd10.weapon.pierceDamage"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.damage.pierce.value}}
                </div>
            </div>
            {{/if}}
            {{#if data.damage.blunt.value}}
            <div class="weapon-stats attack-check" data-damage-type="blunt">
                <div class="stat-name">
                    {{localize "cd10.weapon.bluntDamage"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.damage.blunt.value}}
                </div>
            </div>
            {{/if}}
            {{#if data.damage.energy.value}}
            <div class="weapon-stats attack-check" data-damage-type="energy">
                <div class="stat-name">
                    {{localize "cd10.weapon.energyDamage"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.damage.energy.value}}
                </div>

            </div>
            {{/if}}
            {{#if data.damage.shock.value}}
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.weapon.shockDamage"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.damage.shock.value}}
                </div>
            </div>
            {{/if}}
            {{#if data.blockValue.value}}
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.weapon.blockValue"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.blockValue.value}}
                </div>
            </div>
            {{/if}}
            {{#if data.reach.value}}
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.weapon.reach"}}
                </div>
                <div class="weapon-statvalue">
                    {{#if (eq data.reach.value "grappling")}}
                        {{localize "cd10.reach.grappling"}}
                    {{else if (eq data.reach.value "close")}}
                        {{localize "cd10.reach.close"}}
                    {{else if (eq data.reach.value "normal")}}
                        {{localize "cd10.reach.normal"}}
                    {{else if (eq data.reach.value "long")}}
                        {{localize "cd10.reach.long"}}
                    {{else if (eq data.reach.value "vlong")}}
                        {{localize "cd10.reach.vlong"}}
                    {{/if}}
                </div>
            </div>
            {{/if}}
            {{else}}
            {{#if data.range.value.rangeClose}}
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeClose"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.range.value.rangeClose}}
                </div>
            </div>
            {{/if}}
            {{#if data.range.value.rangeNormal}}
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeNormal"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.range.value.rangeNormal}}
                </div>
            </div>
            {{/if}}
            {{#if data.range.value.rangeLong}}
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeLong"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.range.value.rangeLong}}
                </div>
            </div>
            {{/if}}
            {{#if data.range.value.rangeMax}}
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeMax"}}
                </div>
                <div class="weapon-statvalue">
                    {{data.range.value.rangeMax}}
                </div>
            </div>
            {{/if}}
            {{#unless (eq data.consumesAmmo.value "None")}}
            <div class="weapon-stats">
                <div class="ammo-selector">
                    AMMO SELECTOR
                </div>
            </div>
            {{log "Selected Ammo: " data.selectedAmmo.value}}
            {{/unless}}
        {{/unless}}
        </div>
        <div class="description-box dark-background pad-8">
            {{{data.description.value}}}
        </div>
    </div>
</div>