<div class="weapon-card" data-item-id="{{_id}}">
    <div class="weapon-info weapon-name">
        <p>{{name}}</p>
    </div>
    <img
        class="item-img"
        src="{{img}}"
        title="{{name}}"
    />
    {{#if (eq type "weapon")}}
        {{#if data.slashDamage}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.weapon.slashDamage"}}
            </div>
            <div class="weapon-statvalue">
                {{data.slashDamage}}
            </div>
        </div>
        {{/if}}
        {{#if data.pierceDamage}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.weapon.pierceDamage"}}
            </div>
            <div class="weapon-statvalue">
                {{data.pierceDamage}}
            </div>
            
        </div>
        {{/if}}
        {{#if data.bluntDamage}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.weapon.bluntDamage"}}
            </div>
            <div class="weapon-statvalue">
                {{data.bluntDamage}}
            </div>
        </div>
        {{/if}}
        {{#if data.energyDamage}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.weapon.energyDamage"}}
            </div>
            <div class="weapon-statvalue">
                {{data.energyDamage}}
            </div>
        
        </div>
        {{/if}}
        {{#if data.shockDamage}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.weapon.shockDamage"}}
            </div>
            <div class="weapon-statvalue">
                {{data.shockDamage}}
            </div>
        </div>
        {{/if}}
        {{#if data.blockValue}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.weapon.blockValue"}}
            </div>
            <div class="weapon-statvalue">
                {{data.blockValue}}
            </div>
        </div>
        {{/if}}
        {{#if data.reach}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.weapon.reach"}}
            </div>
            <div class="weapon-statvalue">
                {{data.reach}}
            </div>
        </div>
        {{/if}}
    {{/if}}
    {{#if (eq type "rangedWeapon")}}
        {{#if data.rangeClose}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.rangedWeapon.rangeClose"}}
            </div>
            <div class="weapon-statvalue">
                {{data.rangeClose}}
            </div>
        </div>
        {{/if}}
        {{#if data.rangeNormal}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.rangedWeapon.rangeNormal"}}
            </div>
            <div class="weapon-statvalue">
                {{data.rangeNormal}}
            </div>
        </div>
        {{/if}}
        {{#if data.rangeLong}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.rangedWeapon.rangeLong"}}
            </div>
            <div class="weapon-statvalue">
                {{data.rangeLong}}
            </div>
        </div>
        {{/if}}
        {{#if data.rangeMax}}
        <div class="weapon-stats">
            <div class="stat-name">
                {{localize "cd10.rangedWeapon.rangeMax"}}
            </div>
            <div class="weapon-statvalue">
                {{data.rangeMax}}
            </div>
        </div>
        {{/if}}
        {{#if data.consumesAmmo}}
        <div class="weapon-stats">
            <div class="ammo-selector">
                CLICK HERE
            </div>
        </div>
        {{log "Selected Ammo: " data.selectedAmmo}}
        {{/if}}
    {{/if}}
</div>