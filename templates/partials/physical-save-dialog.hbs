<form class="physical-save-dialog sheet-card">
    <div class="flex-col">
        <div class="flex-col pad-8">
            <label>{{localize "cd10.sheet.select"}} {{localize "cd10.sheet.trait"}}</label>
            <select id="trait-selected" name="trait-selected">
                <option value="None">None</option>
                {{#select traits}}
                {{#each traits as |trait index|}}
                <option value="{{index}}">{{trait.name}}</option>
                {{/each}}
                {{/select}}
            </select>
        </div>
        {{#unless (eq damageTypeSetting "simple")}}
        <div class="flex-col pad-8">
            <label>{{localize "cd10.sheet.select"}} {{localize "cd10.sheet.type"}}</label>
            <select id="damage-type" name="damage-type">
                {{#select damage-type}}
                {{#if (eq damageTypeSetting "standard")}}
                    {{#each config.standardDamageTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                {{else if (eq damageTypeSetting "complex")}}
                    {{#each config.complexDamageTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                {{/if}}
                {{/select}}
            </select>
        </div>
        {{/unless}}
        <div class="flex-col pad-8">
            <label>{{localize "cd10.sheet.enter"}} {{localize "cd10.chat.attack.lethality"}}</label>
            <input id="lethality" name="lethality" type="text">
        </div>
        <div class="flex-col pad-8">
            <label>{{localize "cd10.sheet.enter"}} {{localize "cd10.chat.attack.shock"}}</label>
            <input id="shock" name="shock" type="text">
        </div>
        <div class="flex-col pad-8">
            <label>{{localize "cd10.sheet.blockQuestion"}}</label>
            <input id="parried" name="parried" type="checkbox" value="off" />
        </div>
        <div class="flex-row flex-even">
            <div class="flex-col">
                <label>{{localize "cd10.sheet.heroPoint"}}</label>
                <input id="heroPoint" name="heroPoint" type="checkbox" value="off" />
            </div>
            <div class="flex-col">
                <label>{{localize "cd10.sheet.reverse"}} {{localize "cd10.sheet.trait"}}</label>
                <input id="reverseTrait" name="reverseTrait" type="checkbox" value="off" />
            </div>
        </div>
    </div>
</form>