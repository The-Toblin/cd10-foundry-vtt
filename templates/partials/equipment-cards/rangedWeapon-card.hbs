<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    <img class="item-img display-inline" src="{{img}}" title="{{name}}" height="15" width="15" />
</td>
<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    {{name}}
</td>
<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    {{data.range.value.rangeClose}}
</td>
<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    {{data.range.value.rangeNormal}}
</td>
<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    {{data.range.value.rangeLong}}
</td>
<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    {{data.range.value.rangeMax}}
</td>
<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    {{data.ammoGroup.value}}
</td>
<td class="item equippable-inventory-item" data-item-id="{{_id}}">
    <a class="item-equip" data-type="text" title={{localize "cd10.sheet.equip" }}>
        <i class="far fa-{{#if data.isEquipped.value}}minus{{else}}plus{{/if}}-square"></i>
    </a>
</td>
<table>
    <tr>
        <th>

        </th>
        <th>
            {{localize "cd10.stats.name"}}
        </th>
        <th>
            {{localize "cd10.weapon.lethality"}}
        </th>
        <th>
            {{localize "cd10.weapon.shockDamage"}}
        </th>
        <th>
            {{localize "cd10.item.count"}}
        </th>
        <th>
            {{localize "cd10.sheet.selected"}}
        </th>
    </tr>
    {{#each @root.ammunition as |ammo|}}
    {{#if (eq ammo.data.ammoType ../data.ammoGroup.value)}}
    <tr class="item equippable-inventory-item ammo-selector" data-item-id="{{ammo._id}}" data-weapon-id="{{../_id}}">
        <td>
            <img class="item-img display-inline" src="{{img}}" title="{{name}}" height="15" width="15" />
        </td>
        <td>
            {{name}}
        </td>
        <td class="{{#if (eq ../data.selectedAmmo.value ammo.name)}}reveal-rollable{{/if}} item equippable-inventory-item" data-item-id="{{../_id}}">
            <a class="attack-check item-roll hidden rollable" title={{localize "cd10.sheet.roll" }}>
                <img class="d10-roll-icon" src="/systems/cd10/assets/icons/roll_cd10.webp" />
            </a>
            {{#if data.damage.slash.selected}} {{data.damage.slash.value}} {{localize "cd10.weapon.slashDamage"}}
            {{else if data.damage.pierce.selected}} {{data.damage.pierce.value}} {{localize "cd10.weapon.pierceDamage"}}
            {{else if data.damage.blunt.selected}} {{data.blunt.pierce.value}} {{localize "cd10.weapon.bluntDamage"}}
            {{else if data.damage.energy.selected}} {{data.damage.energy.value}} {{localize "cd10.weapon.energyDamage"}}
            {{/if}}
        </td>
        <td>
            {{data.damage.shock.value}}
        </td>
        <td>
            {{data.count.value}}
        </td>
        <td>
            <a class="ammo-select" data-type="text">
                <i class="far fa-{{#if (eq ../data.selectedAmmo.value ammo.name)}}check-{{/if}}square"></i>
            </a>
        </td>
    </tr>
    {{/if}}
    {{/each}}
</table>