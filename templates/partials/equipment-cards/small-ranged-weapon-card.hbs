<div class="weapon-card cd10-card flex-col item" data-item-id="{{_id}}">
    <div class="weapon-info weapon-name cd10-card-detail pad-8">
        <p><a class="item-equip" data-type="text">
                <i class="far fa-{{#if system.isEquipped}}check-{{/if}}square"></i>
            </a>
            {{name}}</p>
    </div>
    <div class="flex-row flex-start">
        <div class="weapon-box cd10-card-detail pad-8">
            <div class="weapon-stats reveal-rollable">
                <div class="stat-name">
                    {{localize "cd10.chat.attack.attack"}}
                </div>
                <div class="weapon-statvalue">
                    <a class="attack-check item-roll item-roll hidden rollable"
                        title={{localize "cd10.sheet.roll" }}>
                        <img class="d10-roll-icon" src="/systems/cd10/assets/icons/roll_cd10.webp" />
                    </a>
                </div>
            </div>
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeClose"}}
                </div>
                <div class="weapon-statvalue">
                    {{system.range.rangeClose}}
                </div>
            </div>
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeNormal"}}
                </div>
                <div class="weapon-statvalue">
                    {{system.range.rangeNormal}}
                </div>
            </div>
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeLong"}}
                </div>
                <div class="weapon-statvalue">
                    {{system.range.rangeLong}}
                </div>
            </div>
            <div class="weapon-stats">
                <div class="stat-name">
                    {{localize "cd10.rangedWeapon.rangeMax"}}
                </div>
                <div class="weapon-statvalue">
                    {{system.range.rangeMax}}
                </div>
            </div>
        </div>
    </div>
</div>