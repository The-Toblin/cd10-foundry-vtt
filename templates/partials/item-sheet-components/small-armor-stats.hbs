<section class="small-weapon-armor-stats flex-row flex-even">
    <div class="armor pad">
        <table>
            <tr>
                {{#if (eq damageTypeSetting "simple")}}
                <th>
                    {{localize "cd10.chat.attack.lethality"}}
                </th>
                {{else if (eq damageTypeSetting "standard")}}
                    {{#each config.standardDamageTypes as | name |}}
                        <th>
                            {{localize name}}
                        </th>
                    {{/each}}
                {{else if (eq damageTypeSetting "complex")}}
                    {{#each config.complexDamageTypes as | name |}}
                        <th>
                            {{localize name}}
                        </th>
                    {{/each}}
                {{/if}}
                <th>
                    {{localize "cd10.armor.shockProtection"}}
                </th>
            </tr>

            <tr>
                {{#if (eq damageTypeSetting "simple")}}
                    <td>
                        <input name="data.protection.slash.value" type="text" value="{{data.protection.slash.value}}"
                            data-dtype="{{data.protection.slash.type}}" />
                    </td>
                {{else if (eq damageTypeSetting "standard")}}
                    <td>
                        <input name="data.protection.slash.value" type="text" value="{{data.protection.slash.value}}"
                            data-dtype="{{data.protection.slash.type}}" />
                    </td>
                    <td>
                        <input name="data.protection.pierce.value" type="text" value="{{data.protection.pierce.value}}"
                            data-dtype="{{data.protection.pierce.type}}" />
                    </td>
                    <td>
                        <input name="data.protection.blunt.value" type="text" value="{{data.protection.blunt.value}}"
                            data-dtype="{{data.protection.blunt.type}}" />
                    </td>
                {{else if (eq damageTypeSetting "complex")}}
                    <td>
                        <input name="data.protection.slash.value" type="text" value="{{data.protection.slash.value}}"
                            data-dtype="{{data.protection.slash.type}}" />
                    </td>
                    <td>
                        <input name="data.protection.pierce.value" type="text" value="{{data.protection.pierce.value}}"
                            data-dtype="{{data.protection.pierce.type}}" />
                    </td>
                    <td>
                        <input name="data.protection.blunt.value" type="text" value="{{data.protection.blunt.value}}"
                            data-dtype="{{data.protection.blunt.type}}" />
                    </td>
                    <td>
                        <input name="data.protection.energy.value" type="text" value="{{data.protection.energy.value}}"
                            data-dtype="{{data.protection.energy.type}}" />
                    </td>
                {{/if}}
                <td>
                    <input name="data.protection.shock.value" type="text" value="{{data.protection.shock.value}}"
                        data-dtype="{{data.protection.shock.type}}" />
                </td>
            </tr>
        </table>
        {{#if hitLocationSetting}}
        <table>
            <tr>
                {{#each config.coverage as | name |}}
                <th>{{localize name}}</th>
                {{/each}}
            </tr>
            <tr>
                {{#each config.coverage as |name type|}}
                <td>
                    <a class="protection-check-box" data-type="text" data-body-type={{type}}>
                        <i class="far fa{{#if (lookup (lookup ../data.coverage type) "value")}}-check{{/if}}-square"></i>
                    </a>
                </td>
                {{/each}}
            </tr>
        </table>
        {{/if}}
    </div>
</section>