<section class="small-weapon-armor-stats flex-row flex-even">
    <div class="ammo pad">
        <table>
            <tr>
                <th>{{localize "cd10.ammunition.type"}}</th>
                <th>{{localize "cd10.chat.attack.lethality"}}</th>
            </tr>
                <td>
                    <select name="system.ammoType">
                        {{#select system.ammoType}}
                            {{#each config.ammunitionTypes as |name type|}}
                                <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="system.damage" type="text" value="{{system.damage}}"/>
                </td>
        </table>
    </div>
</section>