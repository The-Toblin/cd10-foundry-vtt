<div class="ranged-weapon pad">
    <table>
        <tr>
            <th>{{localize "cd10.rangedWeapon.attackWith"}}</th>
            <th>{{localize "cd10.rangedWeapon.rangeClose"}}</th>
            <th>{{localize "cd10.rangedWeapon.rangeNormal"}}</th>
            <th>{{localize "cd10.rangedWeapon.rangeLong"}}</th>
            <th>{{localize "cd10.rangedWeapon.rangeMax"}}</th>
            <th>{{localize "cd10.rangedWeapon.ammunition"}}</th>
        </tr>
        <tr>
            <td>
                <select name="system.attackSkill.value">
                    <option value="None">{{localize "cd10.sheet.none"}}</option>
                    {{#select data.attackSkill.value}}
                    {{#each worldSkills as |data id|}}
                    <option value="{{data.matchID}}">{{data.name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </td>
            <td>
                <input name="system.range.value.rangeClose" type="text" value="{{data.range.value.rangeClose}}"
                    data-dtype="{{data.range.type}}" />
            </td>
            <td>
                <input name="system.range.value.rangeNormal" type="text" value="{{data.range.value.rangeNormal}}"
                    data-dtype="{{data.range.type}}" />
            </td>
            <td>
                <input name="system.range.value.rangeLong" type="text" value="{{data.range.value.rangeLong}}"
                    data-dtype="{{data.range.type}}" />
            </td>
            <td>
                <input name="system.range.value.rangeMax" type="text" value="{{data.range.value.rangeMax}}"
                    data-dtype="{{data.range.type}}" />
            </td>
            <td>
                <select name="system.ammoGroup.value">
                    {{#select data.ammoGroup.value}}
                    {{#each config.ammunitionTypes as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </td>
        </tr>
    </table>
    {{#if modernity}}
    <table>
        <tr>
            <th>{{localize "cd10.rangedWeapon.accuracy"}}</th>
            <th>{{localize "cd10.rangedWeapon.magazine"}}</th>
            <th>{{localize "cd10.rangedWeapon.burst"}}</th>
            <th>{{localize "cd10.rangedWeapon.fullAuto"}}</th>
        </tr>
        <tr>
            <td><input name="system.accuracy.value" type="text" value="{{data.accuracy.value}}"
                    data-dtype="{{data.accuracy.type}}" /></td>
            <td><input name="system.magazine.value" type="text" value="{{data.magazine.value}}"
                    data-dtype="{{data.magazine.type}}" /></td>
            <td><input name="system.rof.value.burst" type="text" value="{{data.rof.value.burst}}"
                    data-dtype="{{data.rof.type}}" /></td>
            <td><input name="system.rof.value.fullAuto" type="text" value="{{data.rof.value.fullAuto}}"
                    data-dtype="{{data.rof.type}}" /></td>
        </tr>
    </table>
    {{/if}}
</div>