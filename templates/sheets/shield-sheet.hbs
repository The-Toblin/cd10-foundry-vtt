<form class="{{cssClass}}" autocomplete="off">
    <div class="item-sheet-header">
        <h1>
            <input
                name="name"
                type="text"
                value="{{item.name}}"
                placeholder="{{localize "cd10.skill.name"}}"
            />
        </h1>
    </div>
    <hr>
    <div class="item-sheet-main-content flex-row flex-evenly">
        <img 
            src="{{item.img}}"
            data-edit="img"
            title="{{item.name}}"
        />
        <div class="generic-info-box sheet-card-detail">
            {{> "systems/cd10/templates/partials/item-sheet-components/generic-item-data.hbs" this }}
        </div>
    </div>
    <div class="weapon-and-armor-stats sheet-card-detail">
        {{> "systems/cd10/templates/partials/item-sheet-components/small-shield-stats.hbs" this }}
    </div>
    <div class="editor-box sheet-card-detail pad-8">
        {{editor
            content=data.description.value
            target="data.description.value"
            button=true
            owner=owner
            editable=editable
        }}
    </div>
</form>