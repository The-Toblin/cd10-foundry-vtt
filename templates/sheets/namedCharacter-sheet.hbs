<form class="{{cssClass}}" autocomplete="off">
    <div class="topsheet">
        <div class="bio-box">
            <header class="sheet-header">
                <h1>
                    <input name="name"
                        type="text"
                        value="{{actor.name}}"
                        placeholder="{{localize "cd10.stats.name"}}"
                    />
                </h1>
            </header>
            <div class="character-description">
                {{> "systems/cd10/templates/partials/character-description-block.hbs"}}
            </div>
            <hr>
            <div class="skill-trait-box">
                <div class="skill-card">
                    <div class="skill-card-header">
                        <h3>
                            {{localize "cd10.stats.skills"}}
                        </h3>
                        <a class="item-create" 
                            data-type="skill" 
                            title={{localize "cd10.sheet.add" }}
                        >
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="skill-list">
                        {{#each skills as |skill id|}}
                        <div class="skill-pair item" data-item-id="{{skill._id}}">
                            <input
                                class="skill-name inline-edit"
                                data-field="name"
                                type="text" 
                                value="{{skill.name}}" 
                                placeholder="{{localize "cd10.skill.name"}}"
                            />
                            <input
                                class="skill-value inline-edit"
                                data-field="data.skillLevel"
                                type="text" 
                                value="{{skill.data.skillLevel}}" 
                                placeholder="{{localize "cd10.skill.skillLevel"}}"
                            />
                            <input
                                class="skill-levelUp"
                                name="data.levelUp"
                                data-field="data.levelUp"
                                type="checkbox"
                                value="{{data.levelUp}}"
                            />
                            <a 
                                class="item-delete" 
                                data-type="skill" 
                                title={{localize "cd10.sheet.remove"}}
                             >
                            <i class="fas fa-trash"></i>
                            </a>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="skill-card">
                    <div class="skill-card-header">
                        <h3>
                            {{localize "cd10.stats.traits"}}
                        </h3>
                        <h3 class="traits-total">
                            Total: {{data.totalTraitValue}}
                        </h3>
                        <a class="item-create" 
                            data-type="trait" 
                            title={{localize "cd10.sheet.add"}}
                        >
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="skill-list">
                        {{#each traits as |trait id|}}
                        <div class="skill-pair item" data-item-id="{{trait._id}}">
                            <input
                                class="skill-name inline-edit"
                                data-field="name"
                                type="text" 
                                value="{{trait.name}}" 
                                placeholder="{{localize "cd10.skill.name"}}"
                            />
                            <input
                                class="skill-value inline-edit"
                                data-field="data.skillLevel"
                                type="text" 
                                value="{{trait.data.skillLevel}}" 
                                placeholder="{{localize "cd10.trait.skillLevel"}}"
                            />
                            <a 
                                class="item-delete" 
                                data-type="skill" 
                                title={{localize "cd10.sheet.remove" }}
                             >
                            <i class="fas fa-trash"></i>
                            </a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <hr>
            <div class="inv-box">
                <div class="sheet-header">
                    <h3>
                        {{localize "cd10.sheet.notes"}}
                    </h3>
                </div>
                <div class="notes">
                    {{editor
                        content=data.notes
                        target="data.notes"
                        button=true
                        owner=owner
                        editable=editable
                    }}
                </div>
            </div>
        </div>
        <div class="sidebar">
            <img src="{{actor.img}}"
                data-edit="img"
                title="{{actor.name}}"
                class="actor-image"
            />
            <hr>
            <div class="character-stats">
                <h3 class="sheet-header">
                    {{localize "cd10.sheet.health"}}
                </h3>
                {{> "systems/cd10/templates/partials/character-stat-block.hbs"}}
                <hr>
            </div>
             <h3 class="sheet-header">
                {{localize "cd10.stats.money"}}
            </h3>
            <div class="flex-row-box">
                <div>
                    <input
                        name="data.money"
                        type="text" 
                        value="{{data.money}}" 
                        data-dtype="Number"
                        placeholder=0
                    />
                </div>
                <div class="silvermark">
                    silver
                </div>
            </div>
            <hr>
            <h3 class="sheet-header">
                {{localize "cd10.sheet.weapons"}}
            </h3>
            <div class="weapon-list">
                {{#each weapons as |weapon id|}}
                {{> "systems/cd10/templates/partials/weapon-card.hbs" weapon}}
                {{/each}}
            </div>
            <hr>
            <h3 class="sheet-header">
                {{localize "cd10.sheet.armor"}}
            </h3>
            <div class="armor-list">
                {{#each armors as |armor id|}}
                {{> "systems/cd10/templates/partials/armor-card.hbs" armor}}
                {{/each}}
            </div>
            <hr>
        </div>
    </div>
</form>