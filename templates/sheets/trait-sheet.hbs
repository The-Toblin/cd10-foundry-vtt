<form class="{{cssClass}}" autocomplete="off">
  <div class="headerbox">
    <header class="sheet-header">
      <img
        src="{{item.img}}"
        data-edit="img"
        title="{{item.name}}"
        height="64"
        width="64"
      />
      <h1>
        <input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="{{localize "cd10.trait.name"}}"
        />
      </h1>
      <h1>
        <select name="data.skillType">
          {{#select data.skillType}}
            {{#each config.traits as |name type|}}
              <option value="{{type}}">
                {{localize name}}
              </option>
            {{/each}}
          {{/select}}
        </select>
      </h1>
    </header>
  </div>
  <div class="sheet-content">
    <div class="stat-box">
      <div class="value-box">
        <div class="stat-name">
          <label>
            {{localize "cd10.trait.range"}}
          </label>
        </div>
        <div class="stat-value">
          <input
            name="data.min"
            type="text"
            value="{{data.min}}"
            placeholder="{{localize "cd10.sheet.min"}}"
          />
        </div>
        <div class="stat-value">
          <input
            name="data.max"
            type="text"
            value="{{data.max}}"
            placeholder="{{localize "cd10.sheet.max"}}"
          />
        </div>
      </div>
    </div>
    {{editor
      content=data.description
      target="data.description"
      button=true
      owner=owner
      editable=editable
    }}
  </div>
</form>