<form class="{{cssClass}}" autocomplete="off">
    <div class="item-sheet-header">
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="{{localize " cd10.skill.name"}}" />
        </h1>
    </div>
    <hr>
    <div class="item-sheet-main-content flex-row flex-evenly">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="generic-info-box card">
            <div class="editor-box">
                {{editor
                content=data.description.value
                target="data.description.value"
                button=true
                owner=owner
                editable=editable
                }}
            </div>
        </div>
    </div>
    <div class="weapon-and-armor-stats card">
        {{> "systems/cd10_dev/templates/partials/small-spell-stats.hbs" this }}
    </div>
</form>