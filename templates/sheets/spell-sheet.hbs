<form class="{{cssClass}}" autocomplete="off">
    <div class="headerbox">
        <header class="sheet-header">
            <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
            <h1>
                <input name="name" type="text" value="{{item.name}}" placeholder="{{localize "cd10.skill.name"}}" />
            </h1>
            <h3>
                <select name="data.skillType.value">
                    {{#select data.skillType.value}}
                        {{#each config.skills as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </h3>
        </header>
    </div>
    <div class="sheet-content">
        <div class="stat-box">
            <div class="value-box">
                <div class="stat-name">
                    <label>
                        {{localize "cd10.skill.range"}}
                    </label>
                </div>
                <div class="stat-value">
                    0 / 12
                </div>
            </div>
            <div class="teachable-box">
                {{localize "cd10.skill.teachableYes"}}
                <input name="data.teachable.value" type="checkbox" {{checked data.teachable.value}} data-dtype="{{data.teachable.type}}" />
            </div>
        </div>
        {{editor
            content=data.description.value
            target="data.description.value"
            button=true
            owner=owner
            editable=editable
        }}
    </div>
</form>