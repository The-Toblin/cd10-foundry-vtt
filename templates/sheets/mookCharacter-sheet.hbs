<form class="{{cssClass}}" autocomplete="off">
    <div class="cd10-sheet flex-column flex-start">
        <div class="flex-row flex-between header-box">
            <div class="flex-column flex-center title-box">
                <h1> 
                    <input 
                        name="name"
                        type="text"
                        value="{{actor.name}}"
                        placeholder="{{localize "cd10.stats.name"}}"
                    />
                </h1>
                <div class="character-stats">
                    <h3 
                        class="sheet-header">{{localize "cd10.sheet.health"}}
                    </h3>
                    {{> "systems/cd10/templates/partials/character-stat-block.hbs"}}
                </div>
            </div>
            <img 
                src="{{actor.img}}"
                data-edit="img"
                title="{{actor.name}}"
                class="actor-image" 
            />
        </div>
        <hr>
        <div class="quote">
            <textarea name="data.quote">{{data.quote}}</textarea>
        </div>
        <hr>
        <div class="body-box flex-row flex-between">
            <div class="ability-card flex-column flex-start">
                <div class="skill-trait-header flex-row flex-between">
                    <h3>
                        {{localize "cd10.stats.skills"}}
                    </h3>
                    <a 
                        class="item-create"
                        data-type="skill"
                        title={{localize "cd10.sheet.add" }}>
                        <i
                            class="fas fa-plus">
                        </i>
                    </a>
                </div>
                <div class="skill-list flex-column flex-start">
                    {{#each skills as |skill id|}}
                    <div class="attribute-pair item flex-row flex-evenly" data-item-id="{{skill._id}}">
                        <input
                            class="attribute-name inline-edit"
                            data-field="name"
                            type="text"
                            value="{{skill.name}}"
                            placeholder="{{localize "cd10.skill.name"}}"
                        />
                        <input
                            class="attribute-value inline-edit"
                            data-field="data.skillLevel"
                            type="text" value="{{skill.data.skillLevel}}"
                            placeholder="{{localize "cd10.skill.skillLevel"}}"
                        />
                        <a
                            class="item-delete"
                            data-type="skill"
                            title={{localize "cd10.sheet.remove" }}>
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="ability-card">
                <div class="skill-trait-header flex-row flex-between">
                    <h3>
                        {{localize "cd10.stats.traits"}}
                    </h3>
                    <h3 class="traits-total">
                        Total: {{data.totalTraitValue}}
                    </h3> 
                    <a
                        class="item-create"
                        data-type="trait"
                        title={{localize "cd10.sheet.add" }}
                    >
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
                <div class="trait-list flex-column flex-start">
                    {{#each traits as |trait id|}}
                    <div class="attribute-pair flex-row flex-evenly item" data-item-id="{{trait._id}}">
                        <input
                            class="attribute-name inline-edit"
                            data-field="name"
                            type="text"
                            value="{{trait.name}}"
                            placeholder="{{localize "cd10.skill.name"}}"
                        />
                        <input
                            class="attribute-value inline-edit"
                            data-field="data.skillLevel"
                            type="text"
                            value="{{trait.data.skillLevel}}"
                            placeholder="{{localize "cd10.trait.skillLevel"}}"
                        />
                        <a
                            class="item-delete"
                            data-type="skill"
                            title={{localize "cd10.sheet.remove" }}
                        >
                            <i class="fas fa-trash"></i>
                        </a>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <hr>
        <div class="body-box flex-column flex-between">
            <div class="flex-row flex-evenly equipment-list">
                <div class="weapon-list">
                    {{#each weapons as |weapon id|}}
                    {{> "systems/cd10/templates/partials/weapon-card.hbs" weapon}}
                    {{/each}}
                </div>
                <div class="armor-list">
                    {{#each armors as |armor id|}}
                    {{> "systems/cd10/templates/partials/armor-card.hbs" armor}}
                    {{/each}}
                </div>
                <div class="shield-list">
                    {{#each shields as |shield id|}}
                    {{> "systems/cd10/templates/partials/armor-card.hbs" shield}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</form>