<form class="{{cssClass}}" autocomplete="off">
    <div class="cd10-sheet flex-column flex-start">
        <div class="flex-row flex-between header-box">
            <div class="flex-column flex-center title-box">
                <h1>
                    <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "cd10.stats.name"}}" />
                </h1>
                <div class="character-stats">
                    <h3 class="sheet-header">{{localize "cd10.sheet.health"}}
                    </h3>
                    {{> "systems/cd10/templates/partials/character-stat-block.hbs"}}
                </div>
            </div>
            <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" class="actor-image" />
        </div>
        <hr>
        <div class="quote">
            <textarea name="data.quote.value">{{data.quote.value}}</textarea>
        </div>
        <hr>
        <div class="body-box flex-column flex-start">
            <div class="sheet-card flex-row flex-even">
                <div>{{localize "cd10.sheet.positive"}}: {{data.posTraits.value}}</div>
                <div>{{localize "cd10.sheet.negative"}}: {{data.negTraits.value}}</div>
                <div>{{localize "cd10.sheet.total"}}: {{data.traitsValue.value}}</div>
            </div>
            <div>
                {{> "systems/cd10/templates/partials/skill-list.hbs"}}
            </div>
        </div>
    </div>
    <hr>
    <div class="body-box flex-column flex-between">
        <div class="flex-row flex-even equipment-list">
            {{#each meleeWeapons as |meleeWeapon id|}}
            {{> "systems/cd10/templates/partials/small-weapon-card.hbs" meleeWeapon }}
            {{/each}}
            {{#each rangedWeapons as |rangedWeapon id|}}
            {{> "systems/cd10/templates/partials/small-weapon-card.hbs" rangedWeapon }}
            {{/each}}
            {{#each armors as |armor id|}}
            {{> "systems/cd10/templates/partials/small-armor-card.hbs" armor }}
            {{/each}}
            {{#each shields as |shield id|}}
            {{> "systems/cd10/templates/partials/small-armor-card.hbs" shield }}
            {{/each}}
        </div>
    </div>
    </div>
</form>